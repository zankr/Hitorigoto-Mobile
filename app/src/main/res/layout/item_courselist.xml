<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/bg_outline_12"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/courselist_image"
        android:layout_margin="1dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_courselist_n5" />

    <Space
        android:layout_width="24dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/courselist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Hitorigoto.TitleMedium"
        tools:text="CourseList Title" />
</LinearLayout>