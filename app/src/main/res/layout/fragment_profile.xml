<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.profileFragment"
    android:background="#645CBB">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                style="@style/Widget.Material3.Button.IconButton"

                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Kembali ke Getting Started"
                android:onClick="backToGettingStarted"
                android:src="@drawable/ic_left_arrow"
                app:tint="#FFFFFF" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile"
                android:textColor="@color/cardview_light_background"
                android:textAppearance="@style/TextAppearance.Hitorigoto.TitleMedium"
                android:textSize="24sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/imageholder" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Ahmad Bustomi"
                android:textAppearance="@style/TextAppearance.Hitorigoto.TitleLarge"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="fauzankurniarahman@gmail.com"
                android:textAppearance="@style/TextAppearance.Hitorigoto.LabelSmall"
                android:textColor="@color/cardview_light_background" />

            <Button
                style="Widget.Material3.Button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:backgroundTint="#F7EFE5"
                android:paddingVertical="16dp"
                android:text="Edit Profile"
                android:textColor="#645CBB"

                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cardprofile"
            android:padding="24dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:text="Aktivitas Anda"
                android:textAppearance="@style/TextAppearance.Hitorigoto.BodyLarge"
                android:textColor="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="339dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/progresscard"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/course"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="N5"
                        android:textColor="@color/cardview_light_background"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Hitorigoto.BodyLarge" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="12dp"
                        >


                        <TextView
                            android:id="@+id/textView4"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleMedium"
                            android:text="Kanji" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleLarge"
                            android:text="JLPT N5" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/chapter"
                            android:textColor="#645CBB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleMedium"
                            android:text="Chapter 1/5" />
                    </LinearLayout>

                    <Button
                        style="Widget.Material3.Button"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:backgroundTint="#645CBB"
                        android:paddingVertical="16dp"
                        android:text="Lanjutkan"
                        android:textColor="#F7EFE5 "

                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>