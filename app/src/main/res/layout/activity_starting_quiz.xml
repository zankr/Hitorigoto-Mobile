<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="64dp"
    tools:context=".Activities.StartingQuiz">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.Material3.Button.IconButton"
            app:iconTint="@color/md_theme_light_onSurface"
            app:icon="@drawable/ic_left_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/app_name"
            android:onClick="backToChapterLists"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quiz"
            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleLarge"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView

            android:layout_width="173dp"
            android:layout_height="173dp"
            android:src="@drawable/img_quiz_n5_hiragana" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiragana"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Hitorigoto.HeadlineLarge"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chapter 1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleLarge"
            />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="あ，い，う，え，お"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Hitorigoto.BodyMedium"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/text_view_highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skor Kamu: 0"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Hitorigoto.TitleLarge"
            />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_start_quiz"
        style="Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:text="Mulai Quiz"/>




</LinearLayout>